<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg0"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button android:id="@+id/message_btn"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dip"
            android:text="消息"
            android:textSize="16sp"

            />

        <Button android:id="@+id/address_btn"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/message_btn"
            android:textSize="16sp"
            android:text="通讯录"
            />

        <Button android:id="@+id/manage_btn"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/address_btn"
            android:textSize="16sp"
            android:text="管理"
            />

        </RelativeLayout>

</LinearLayout>
